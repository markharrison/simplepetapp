{
  "name": "Expense Management Dev Container",
  "image": "mcr.microsoft.com/devcontainers/dotnet:9.0",
  
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-azurefunctions",
        "ms-vscode.azurecli",
        "ms-vscode.powershell",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "humao.rest-client",
        "EditorConfig.EditorConfig"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "dotnet.defaultSolution": "src/ExpenseManagement/ExpenseManagement.csproj"
      }
    }
  },

  "postCreateCommand": "curl -sSL -o /tmp/sqlcmd.tar.bz2 https://github.com/microsoft/go-sqlcmd/releases/download/v1.8.0/sqlcmd-linux-amd64.tar.bz2 && sudo tar -xjf /tmp/sqlcmd.tar.bz2 -C /usr/local/bin && rm /tmp/sqlcmd.tar.bz2 && cd src/ExpenseManagement && dotnet restore",

  "forwardPorts": [5000, 5001],

  "portsAttributes": {
    "5000": {
      "label": "HTTP",
      "onAutoForward": "notify"
    },
    "5001": {
      "label": "HTTPS",
      "onAutoForward": "notify"
    }
  },

  "remoteEnv": {
    "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
  }
}
